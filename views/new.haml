%script{:type => "text/javascript", :src  => "/scripts/NewCountdown.js"}
%script{:type => "text/javascript", :src  => "/scripts/FormFormatter.js"}

.new#content
	%h1 Create a new countdown:
	.input_form
		%form{ action: '/countdown', method: :post, id: 'countdown-form'}
			%table.countdown-table
				%tr
					%td 
						%p At
					%td
						%input{ type: 'text', name: 'hour', placeholder: '17', maxlength: '2', id: 'hour-field'} : 
						%input{ type: 'text', name: 'minute', placeholder: '51', maxlength: '2', id: 'minute-field'}
					%td
						%p on
					%td
						%input{ type: 'text', name: 'date', placeholder: '30/07/2013', maxlength: '10', id: 'date-field'}
				%tr
					%td{ colspan: 4}
						%input{ type: 'text', name: 'description', placeholder: 'Something happens...', id: 'description-field'}
				%tr
					%td
						%input{ type: 'hidden', name: 'timezone', placeholder: '0', id: 'timezone-field'}

			%input{ type: 'submit', value: 'Create', id: 'submit'}